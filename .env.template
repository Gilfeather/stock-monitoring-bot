# Discord設定
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
TARGET_USERS=USER_ID_1,USER_ID_2,USER_ID_3
ADMIN_USERS=ADMIN_USER_ID_1,ADMIN_USER_ID_2
ALLOWED_CHANNELS=CHANNEL_ID_1,CHANNEL_ID_2

# AWS設定
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# DynamoDB設定
DYNAMODB_TABLE_STOCKS=stock-monitoring-stocks
DYNAMODB_TABLE_ALERTS=stock-monitoring-alerts
DYNAMODB_TABLE_HISTORY=stock-monitoring-history
DYNAMODB_ENDPOINT_URL=  # ローカル開発時のみ設定（例: http://localhost:8000）

# 株価データAPI設定
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
YAHOO_FINANCE_ENABLED=true

# システム設定
MONITORING_INTERVAL=60  # 監視間隔（秒）
MAX_MONITORED_STOCKS=100  # 最大監視銘柄数
ALERT_COOLDOWN_MINUTES=30  # アラート重複防止時間（分）

# Lambda設定
LAMBDA_FUNCTION_NAME=stock-monitoring-bot
LAMBDA_TIMEOUT=300  # タイムアウト（秒）
LAMBDA_MEMORY_SIZE=512  # メモリサイズ（MB）

# ログ設定
LOG_LEVEL=INFO
POWERTOOLS_SERVICE_NAME=stock-monitoring-bot
POWERTOOLS_LOG_LEVEL=INFO

# 開発環境設定
ENVIRONMENT=development
DEBUG=false